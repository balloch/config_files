filetype plugin on

filetype plugin indent on

" Syntax highlighting on
syntax on

" Dont wrap text
set nowrap

" Setting the tabstop
set tabstop=4 shiftwidth=4

" Tabs as spaces
set expandtab

" Search highlighting
set hlsearch

" Incremental searching
set incsearch

" Ignore case in searching
set ignorecase

" Use any case if caps are used
set smartcase

" Line numbers
set number

" use ag with ack.vim
let g:ackprg = 'ag --nogroup --nocolor --column'
 
